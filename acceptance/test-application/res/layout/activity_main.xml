<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/edit_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/edit_first_name" />

    <EditText
        android:id="@+id/edit_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_first_name"
        android:hint="@string/edit_last_name" />

    <EditText
        android:id="@+id/edit_email_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_last_name"
        android:hint="@string/edit_email_address" />

    <Button
        android:id="@+id/send_to_mixpanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_send"
        android:layout_below="@id/edit_email_address"
        android:onClick="sendToMixpanel" />

    <Button
        android:id="@+id/send_revenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_buy"
        android:layout_below="@id/send_to_mixpanel"
        android:onClick="recordRevenue" />

    <Button
        android:id="@+id/set_background_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_background"
        android:layout_below="@id/send_revenue"
        android:onClick="setBackgroundImage" />
</RelativeLayout>

